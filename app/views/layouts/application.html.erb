            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form> -->
        </div>
      </nav>

      <%# ----- Flash Errors for BCRYPT ----- %>
  <div class="text-center errors-notices">
    <div class="flash-notice">
      <% if notice %>
        <%= notice %>
      <% end %>
    </div>

      <div class="flash-alert">
    	<% if alert %>
        <%= alert %>
    	<% end %>
    </div>
  </div>

      <% if current_page?(:controller => 'pages', :action => 'home') %>
        <%= yield %>
      <% else %>
        <div class="container"><br>
          <%= yield %>
        </div>
      <% end %>



      <footer class="footer fixed-bottom">
        <nav class="footer-bar text-right">
          <p class = "footer-squezeed">hand-squeezed by:
          <a class="footer-brand" href="/about"> team orangejuice </a><img class="footer-logo" src="/images/logos/team-orangejuice-logo.png" alt=""></p>


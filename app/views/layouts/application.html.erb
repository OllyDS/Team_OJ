    <body>
      <nav class="navbar sticky-top navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/"><i class="fas fa-heart"></i>// flatiron friday fragfest</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/"> Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/about"> About <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"  data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> Games
              </a>
              <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                <a class="dropdown-item"><strong>Online Games:</strong></a>
                <a class="dropdown-item" href="/games/2">Starcraft</a>
                <a class="dropdown-item" href="/games/1">League of Legends</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item"><strong>Offline Games:</strong></a>
                <a class="dropdown-item" href="/games/3">Cambio</a>
             </div>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/tournaments">Tournaments</a>
            </li>
          </ul>


            <ul class="nav navbar-nav mr-sm-2">
              <li class="nav-item dropleft">

                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                  <% if current_user %>
                   <% if current_user[:username] %>
                     <%= current_user[:username] %>
                   <% end %>
                 <% else %>
                   <%= "Login " %>
                 <% end %>
                <b class="caret"></b></a>
                <ul class="dropdown-menu">
                <% if current_user %>
                  <li>
                    <a class="dropdown-item" href="<%= "/users/#{current_user[:id]}" %>">Profile</a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="<%= "/tournaments" %>">Tournaments</a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="<%= "/users/#{current_user.id}/edit" %>">Settings</a>
                  </li>
                  <div class="dropdown-divider"></div>
                  <li>
                    <a class="dropdown-item" href=""><%= form_tag('/logout') do %>
                      <%= submit_tag 'logout', :class => "btn btn-sm btn-secondary btn-block" %>
                      <% end %>
                    </a>
                  </li>
                <% else %>
                  <li><a class="dropdown-item" href="<%= root_path %>">Home</a></li>
                  <li><a class="dropdown-item" href="<%= login_path %>">Log In</a></li>
                  <li><a class="dropdown-item" href="<%= new_user_path %>">Sign Up</a></li>
                <% end %>
                </ul>
              </li>
            </ul>

          <!-- <form class="form-inline my-2 my-lg-0">

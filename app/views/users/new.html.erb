<div id="log-sign-forms">



<h2 class="form-signin-heading d-flex justify-content-center">Sign Up</h2>

<%= form_for @user do |f| %>
  <div>
    <%= f.text_field :first_name, autofocus: true, :class => "form-control", :placeholder => "First Name" %>
  </div>
  <div>
    <%= f.text_field :last_name, autofocus: true, :class => "form-control", :placeholder => "Surname" %>
  </div>
  <div>
    <%= f.text_field :username, autofocus: true, :class => "form-control", :placeholder => "User Name" %>
  </div>
  <div>
    <%= f.text_field :email, autofocus: true, :class => "form-control", :placeholder => "Email Address" %>
  </div>
  <div>
    <%= f.password_field :password, :class => "form-control", :placeholder => "Password" %>
  </div>
  <div>

  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Password Confirmation" %>
  <div>
    <div>
      <%= f.submit "Log In", :class => "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>

  </div>



